{
  "name": "chripper",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "NODE_PATH=. npm run setup",
    "setup": "NODE_PATH=. npm run sass",
    "sass": "NODE_PATH=. node-sass app/assets/sass/*.scss --output app/assets/public/css --quiet --output-style expanded --source-map true --include-path node_modules/govuk_template_jinja/assets/stylesheets --include-path node_modules/govuk_frontend_toolkit/stylesheets --include-path node_modules/govuk-elements-sass/public/sass/",
    "start": "NODE_PATH=. ./bin/www",
    "lint": "eslint ./app/**/*.js && eslint ./spec/**/*.js",
    "test": "istanbul cover ./node_modules/mocha/bin/_mocha && codecov",
    "coverage": "nyc --all --reporter=lcov --reporter=text-lcov npm test && nyc check-coverage --statements 0 --lines 0",
    "test:nsp": "nsp check",
    "test:nsp-warn": "nsp check --output summary --warn-only"
  },
  "dependencies": {
    "@hmcts/nodejs-healthcheck": "^1.4.3",
    "@hmcts/nodejs-logging": "^1.4.2",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "config": "^1.28.1",
    "cookie-parser": "^1.4.3",
    "debug": "^3.1.0",
    "ejs": "^2.5.7",
    "govuk-elements-sass": "^3.1.2",
    "govuk_frontend_toolkit": "^7.1.0",
    "govuk_template_jinja": "^0.23.0",
    "express": "^4.16.2",
    "express-session": "^1.14.0",
    "js-yaml": "^3.10.0",
    "mongoose": "^4.5.8",
    "node-sass": "^4.5.3",
    "nunjucks": "^3.0.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "serve-favicon": "^2.4.5",
    "yarn": "1.5.0"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "codecov": "^3.0.0",
    "eslint": "^4.11.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jasmine": "^2.9.1",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "git-message": "^2.0.2",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "nsp": "^3.1.0",
    "nyc": "^11.3.0",
    "proxyquire": "^1.8.0",
    "sinon": "^4.1.2",
    "sinon-chai": "^2.11.0",
    "sonar-scanner": "^3.0.3",
    "expect.js": "^0.3.1"
  },
  "nyc": {
    "exclude": [
      "mochawesome-report",
      "coverage"
    ]
  }
}
